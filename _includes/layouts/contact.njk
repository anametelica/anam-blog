{% block content %}
<h1 class="pb-3">Contact</h1>

<form name="Contact Me" action="#" method="POST" netlify data-netlify="true">
  <div class="form-group row mb-2">
    <label for="fname" class="col-sm-2 col-form-label">First name:</label>
    <div class="col-sm-10">
      <input required type="text" class="form-control" id="fname" placeholder="Name" maxlength="20">
    </div>
  </div>
  <div class="form-group row mb-2">
    <label for="lname" class="col-sm-2 col-form-label">Last name:</label>
    <div class="col-sm-10">
      <input required type="text" class="form-control" id="lname" placeholder="Surname" maxlength="20">
    </div>
  </div>
  <div class="form-group row mb-2">
    <label for="email" class="col-sm-2 col-form-label">Email:</label>
    <div class="col-sm-10">
      <input required type="email" class="form-control" id="email" placeholder="your_email@email.com" maxlength="20">
    </div>
  </div>
  <div class="form-group row mb-2">
    <label for="message" class="col-sm-2 col-form-label">Message:</label>
    <div class="col-sm-10">
      <textarea required class="form-control" id="message" placeholder="Hello!" maxlength="90" rows="5"></textarea>
    </div>
  </div>
  <div class="form-group row mb-2">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="checkbox">
        <label class="form-check-label" for="checkbox">
          I agree to Terms & Conditions
        </label>
      </div>
    </div>
  </div>
  <div class="form-group row mb-2">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>
</form>
{% endblock %}
